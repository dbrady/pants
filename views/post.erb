<div class="post-titlebar">
  <div class="post-gravatar"><%= @post.gravatar %></div>
  <div class="post-titletext">
    <div class="post-title"><a href="<%= @post.url %>"><%= @post.title %></a></div>
   <div class="post-byline">Published at <%= @post.published_at.strftime("%F %H:%M:%S") %> by <%= @post.author %></div>
  </div>
</div>
<div class="post-body">
<%= @post.body %>
</div>
<div class="post-comments">
  <div class="post-comments-title">
    <p>There are <%= @post.comments.size %> comments to this post.</p>
    <p><a href="<%= @post.comment_url %>">Add a comment</a>
  </div>
  <% @post.comments.each do |comment| %>
    <div class="comment">
      <div class="comment-gravatar"><%= comment.gravatar %></div>
      <div class="comment-header">Posted at <%= comment.created_at.strftime("%F %H:%M:%S") %> by <%= comment.author_link %></div>
      <div class="comment-body">
        <%= comment.body %>
      </div>
      </div>
    </div>
  <% end %>
</div>
<div style="clear:both" />

